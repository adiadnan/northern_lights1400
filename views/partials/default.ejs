		to_add += '<h5>';
		to_add += ('<a href=\"/companies?sym=' + related_to[i]._id + '\">');
		to_add += related_to[i].issuer;
		to_add += '</a>'
		to_add += '</h5></a><h5>';
		to_add += '</h5>';
		to_add += '</h3></div>';
		to_add += '<div class=\"panel-body\">';
