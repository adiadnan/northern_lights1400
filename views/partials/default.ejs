		to_add += '</span>';
		to_add += '</div>';
		to_add += '<div class=\"news_sentiment_area\">';
		to_add += 'Company identified by ';
		if(related_to[i].details.length > 1){
			to_add += 'symbols ';
		} else {
			to_add += 'symbol: ';
		}
		to_add += '<span id="related_to_area">';
		for(var j = 0; j < related_to[i].details.length; j++){
			to_add += related_to[i].details[j];
